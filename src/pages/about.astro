---
import RadioLayout from '../layouts/RadioLayout.astro';
---

<RadioLayout title="about | anamnesis.fm">
  <main>
    <div class="about-cabinet">
      <div class="cabinet-titlebar">
        <a href="/" class="back-link">anamnesis.fm</a>
      </div>
      <div class="cabinet-body">
        <div class="display-panel">
          <h1>anamnesis.fm</h1>
          <p class="tagline">A time traveling radio.</p>
        </div>

        <p class="description">
          Tune into any era. This radio aggregates true radio broadcasts from
          <a href="https://archive.org/" target="_blank" rel="noopener">Internet Archive</a>
          collections â€” old time radio dramas, hip-hop mix shows, international stations,
          and independent radio archives from around the world.
        </p>

        <a href="/" class="listen-button">
          <span class="button-text">Listen in</span>
        </a>

        <p class="credit">
          by <a href="https://theodore.net" target="_blank" rel="noopener">Teddy</a> & <a href="https://jacktierney.myportfolio.com/" target="_blank" rel="noopener">Jack</a>
        </p>
      </div>
    </div>
  </main>
</RadioLayout>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 20px;
  }

  .about-cabinet {
    width: 380px;
    max-width: 100%;
    background: var(--color-cabinet-bg);
    border-radius: 3px;
    overflow: hidden;
    box-shadow:
      0 0 0 1px var(--color-border-outer),
      0 0 0 2px var(--color-border-inner),
      0 8px 32px rgba(0, 0, 0, 0.5),
      0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .cabinet-titlebar {
    display: flex;
    align-items: center;
    height: 28px;
    padding: 0 10px;
    background: linear-gradient(
      180deg,
      var(--color-titlebar-top) 0%,
      var(--color-titlebar-bottom) 100%
    );
    border-bottom: 1px solid var(--color-border-dark);
  }

  .back-link {
    font-family: var(--font-display);
    font-size: 14px;
    color: var(--color-text-muted);
    letter-spacing: 1px;
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .back-link:hover {
    color: var(--color-display-text);
  }

  .cabinet-body {
    padding: 16px;
    background: var(--color-cabinet-body);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }

  .display-panel {
    width: 100%;
    padding: 16px 20px;
    background: var(--color-display-bg);
    border-radius: 2px;
    border: 2px solid var(--color-metal-dark);
    box-shadow: var(--shadow-display);
    text-align: center;
    position: relative;
  }

  /* CRT scanlines */
  .display-panel::before {
    content: '';
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.1) 0px,
      rgba(0, 0, 0, 0.1) 1px,
      transparent 1px,
      transparent 3px
    );
    pointer-events: none;
    border-radius: 2px;
  }

  h1 {
    font-family: var(--font-display);
    font-size: 22px;
    color: var(--color-display-text);
    text-shadow: var(--color-display-glow-strong);
    margin-bottom: 4px;
    letter-spacing: 2px;
    position: relative;
  }

  .tagline {
    font-family: var(--font-display);
    font-size: 12px;
    color: var(--color-display-text);
    text-shadow: var(--color-display-glow);
    font-style: italic;
    opacity: 0.7;
    position: relative;
  }

  .description {
    font-family: var(--font-label);
    font-size: 12px;
    color: var(--color-metal-highlight);
    line-height: 1.7;
    text-align: center;
    padding: 0 8px;
  }

  .description a {
    color: var(--color-text-muted);
    text-decoration: underline;
    text-decoration-color: var(--color-text-dim);
    text-underline-offset: 2px;
    transition: color 0.15s ease;
  }

  .description a:hover {
    color: var(--color-metal-shine);
  }

  /* Button styled like radio controls */
  .listen-button {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10px 32px;
    border-radius: 4px;
    background: linear-gradient(180deg, #2a2a2a 0%, #1a1a1a 100%);
    box-shadow:
      0 4px 0 #0a0a0a,
      0 5px 3px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.05),
      inset 0 -1px 0 rgba(0, 0, 0, 0.3);
    text-decoration: none;
    transition: all 0.05s ease;
    position: relative;
    cursor: pointer;
  }

  .listen-button::before {
    content: '';
    position: absolute;
    inset: 2px;
    border-radius: 2px;
    background: linear-gradient(180deg, #252525 0%, #181818 100%);
  }

  .listen-button:hover {
    background: linear-gradient(180deg, #333333 0%, #222222 100%);
  }

  .listen-button:hover::before {
    background: linear-gradient(180deg, #2a2a2a 0%, #1c1c1c 100%);
  }

  .listen-button:active {
    box-shadow:
      0 1px 0 #0a0a0a,
      0 2px 2px rgba(0, 0, 0, 0.3),
      inset 0 2px 3px rgba(0, 0, 0, 0.4);
    transform: translateY(3px);
  }

  .button-text {
    font-family: var(--font-display);
    font-size: 14px;
    color: var(--color-display-text);
    text-shadow: var(--color-display-glow);
    letter-spacing: 1px;
    position: relative;
    z-index: 1;
  }

  .credit {
    font-family: var(--font-label);
    font-size: 10px;
    color: var(--color-text-dim);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .credit a {
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .credit a:hover {
    color: var(--color-display-text);
  }

  @media (max-width: 480px) {
    .about-cabinet {
      margin: 0 8px;
    }

    .cabinet-body {
      padding: 12px;
      gap: 12px;
    }

    .display-panel {
      padding: 12px 16px;
    }

    h1 {
      font-size: 18px;
    }

    .description {
      font-size: 11px;
    }
  }
</style>
